<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2><%= @place.title %></h2>
      <p class="text-muted"><i class="fas fa-map-marker-alt"></i> <%= @place.address %></p>
      <p><strong>Tipo:</strong> <%= @place.place_type %></p>

      <div class="mb-4">
        <h4>Descripción</h4>
        <p><%= @place.description %></p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card sticky-top" style="top: 20px;">
        <div class="card-body">
          <h4 class="card-title">Detalles</h4>

          <div class="d-flex justify-content-between mb-2">
            <span>Precio:</span>
            <strong><%= number_to_currency(@place.price) %></strong>
          </div>

          <div class="d-flex justify-content-between mb-2">
            <span>Habitaciones:</span>
            <strong><%= @place.available_rooms %></strong>
          </div>

          <div class="d-flex justify-content-between mb-4">
            <span>Disponible desde:</span>
            <strong><%= @place.available_date.strftime('%d/%m/%Y') %></strong>
          </div>

          <% if user_signed_in? %>
            <% if current_user == @place.user %>
              <%= link_to 'Editar', edit_place_path(@place), class: 'btn btn-warning w-100 mb-2' %>
              <%= link_to 'Eliminar', @place, method: :delete,
                          data: { confirm: '¿Estás seguro de eliminar este lugar?' },
                          class: 'btn btn-danger w-100' %>
            <% else %>
              <h5 class="mt-3 mb-3">Solicitar Reserva</h5>
              <%= render 'bookings/form', booking: @booking %>
            <% end %>
          <% else %>
            <%= link_to 'Inicia sesión para reservar', new_user_session_path, class: 'btn btn-primary w-100' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
