<div class="place-container-form">
  <div class="place-form-container place-sign-in-container">
    <%= form_with(model: place, local: true, class: "place-form") do |form| %>
      <% if place.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(place.errors.count, "error") %> impidieron guardar este lugar:</h4>
          <ul>
            <% place.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

<div class="place-form-container">
  <div class="text-center mb-3">
    <h1 class="place-titulo">Publica tu lugar</h1>
  </div>

  <%= form_with(model: place, local: true, class: "place-compact-form") do |form| %>
    <div class="place-form-grid">
      <div class="place-form-column">
        <%= form.text_field :title, placeholder: "Título (Ej: Acogedor departamento en el centro)" %>
        <%= form.select :place_type, ['Casa', 'Departamento', 'Habitación', 'Loft'], { prompt: "Tipo de lugar" }, class: "place-form-select" %>
      </div>

      <div class="place-form-column">
        <%= form.text_field :address, placeholder: "Dirección completa" %>
        <div class="place-form-row">
          <%= form.number_field :available_rooms, min: 1, placeholder: "Habitaciones", class: "place-half-width" %>
        </div>
      </div>
    </div>

    <div class="place-form-row">
      <%= form.number_field :price, step: 0.01, min: 0, placeholder: "Precio mensual ($)", class: "place-half-width" %>
    </div>

    <div class="place-form-row">
      <%= form.date_field :available_date, min: Date.today, class: "place-form-date" %>
    </div>

    <div class="place-form-row">
      <%= form.text_area :description, rows: 3, placeholder: "Descripción detallada del lugar..." %></div>
    <div class="place-file-upload">
      <label>Subir foto del lugar</label>
      <%= form.file_field :photo, direct_upload: true, accept: "image/*" %>
    </div>

    <div class="place-form-actions">
      <%= form.submit 'Publicar lugar', class: "place-btn-submit" %>
    </div>

  <% end %>
  </div>
    <% end %>
  </div>

  <div class="place-overlay-container">
    <div class="place-overlay">
      <div class="place-overlay-panel place-overlay-right">
        <h1 class="place-img">¡Bienvenido!</h1>
        <p class="place-img">Publica tu lugar y comienza a recibir inquilinos potenciales</p>
      </div>
    </div>
  </div>
</div>
