<div id="message-<%= message.id %>" class="message <%= message.user == user ? 'message--sent' : 'message--received' %>">
  <small>
    <strong><%= message.user.first_name %></strong>
    <i><%= message.created_at.strftime("%a %b %e, %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
