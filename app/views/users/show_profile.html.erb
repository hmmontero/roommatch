<section class="profile-page" style="background-color: #fff; min-height: 70vh;">
  <div class="container py-4 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12">
        <!-- Card con altura reducida -->
        <div class="card" style="min-height: 70vh; height: 70vh; display: flex; margin-top: 20px; flex-direction: column; border: none; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);border-radius: .5rem; overflow: hidden;">
          <div class="row g-0 h-100 w-100 align-items-stretch">
            <!-- Columna izquierda: Foto y datos básicos -->
            <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-white h-100"
                 style="padding: 30px; background: url('/assets/room1.jpg') no-repeat center center; background-size: cover;">
              <%= image_tag 'fotocarusel1.jpg', alt: 'Foto de perfil', class: 'rounded-circle shadow',
                             style: "width: 180px; height: 180px; object-fit: cover; border: 4px solid #fff; margin-bottom: 15px;" %>
              <h3 style="font-size: 2rem; margin-bottom: 8px;"><%= current_user.first_name %> <%= current_user.last_name %></h3>
              <p style="font-size: 1.2rem;"><%= current_user.occupation %></p>
            </div>

            <!-- Columna derecha: Información adicional -->
            <div class="col-md-6 d-flex align-items-stretch h-100">
              <div class="card-body p-4 w-100 h-100 d-flex flex-column justify-content-evenly" style="flex: 1; height: 100%;">
                <h5 style="color: #0d4029; font-size: 2rem; font-weight: 700;">Información Personal</h5>
                <hr class="mt-0 mb-2">

                <div class="row">
                  <div class="col-6 mb-2">
                    <h6 style="font-size: 1.2rem;">Email</h6>
                    <p class="text-muted" style="font-size: 1rem;"><%= current_user.email %></p>
                  </div>
                  <div class="col-6 mb-2">
                    <h6 style="font-size: 1.2rem;">Género</h6>
                    <p class="text-muted" style="font-size: 1rem;"><%= current_user.gender %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-6 mb-2">
                    <h6 style="font-size: 1.2rem;">Acerca de mí</h6>
                    <p class="text-muted" style="font-size: 1rem;"><%= current_user.bio.presence || "No has escrito nada aún." %></p>
                  </div>
                  <div class="col-6 mb-2">
                    <h6 style="font-size: 1.2rem;">Fecha de nacimiento</h6>
                    <p class="text-muted" style="font-size: 1rem;"><%= current_user.birth_date %></p>
                  </div>
                </div>
                <div class="d-flex justify-content-start">
                  <%= link_to "Editar perfil", edit_user_profile_path, class: "btn btn-save", style: "padding: 0.8rem 2rem; font-size: 1.2rem;" %>
                </div>
              </div>
            </div> <!-- Fin columna derecha -->
          </div> <!-- Fin row -->
        </div> <!-- Fin card -->
      </div>
    </div>
  </div>
</section>
