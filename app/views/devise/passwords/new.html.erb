<div class="devise-container">
  <div class="devise-card">
    <div class="devise-header text-center">
      <h2 class="devise-title">Recupera tu contraseña</h2>
      <small class="devise-subtitle">Ingresa tu correo para recibir instrucciones</small>
    </div>
    <div class="devise-body">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control", placeholder: "Correo electrónico" },
                      label_html: { class: "sr-only" } %>
        </div>

        <div class="form-group text-center">
          <%= f.button :submit, "Enviar instrucciones", class: "devise-btn" %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
