<div class="devise-container">
  <div class="devise-card">
    <div class="devise-header text-center">
      <h2 class="devise-title">Cambia tu contraseña</h2>
      <small class="devise-subtitle">Establece una nueva contraseña</small>
    </div>
    <div class="devise-body">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :password,
                      required: true,
                      hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Nueva contraseña" },
                      label_html: { class: "sr-only" } %>
        </div>

        <div class="form-group">
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Confirmar nueva contraseña" },
                      label_html: { class: "sr-only" } %>
        </div>

        <div class="form-group text-center">
          <%= f.button :submit, "Actualizar contraseña", class: "devise-btn" %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
