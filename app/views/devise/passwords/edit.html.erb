<div class="container-fluid p-0" style="background: #fff; min-height: 100vh; display: flex; align-items: center; justify-content: center;">
  <div class="col-md-6 col-lg-4">
    <div class="card devise-card" style="background: rgba(255,255,255,0.95); border: none; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); backdrop-filter: blur(8px);">

      <div class="card-header text-center" style="background-color: #1EC677; padding: 1.5rem; border-top-left-radius: 12px; border-top-right-radius: 12px;">
        <h2 class="text-white mb-0" style="font-weight: 700;">Cambia tu contraseña</h2>
        <small style="font-size: 0.9rem; color: #0d4029;">Establece una nueva contraseña</small>
      </div>
      <div class="card-body" style="padding: 2rem;">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-group">
            <%= f.input :password,
                        required: true,
                        hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Nueva contraseña" },
                        label_html: { class: "sr-only" } %>
          </div>

          <div class="form-group">
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Confirmar nueva contraseña" },
                        label_html: { class: "sr-only" } %>
          </div>
          <div class="form-group">
            <%= f.button :submit, "Actualizar contraseña", class: "btn btn-block", style: "background: #1EC677; border: none; color: #fff; font-weight: bold; padding: 0.5rem 0.75rem;" %>
          </div>
        <% end %>
        <div class="text-center mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
