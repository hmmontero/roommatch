<div class="devise-container">
  <div class="devise-card">
    <div class="devise-header text-center">
      <h2 class="devise-title">Regístrate</h2>
      <small class="devise-subtitle">Conecta con roomies que encajan con tu estilo de vida</small>
    </div>
    <div class="devise-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :first_name,
                      required: true,
                      input_html: { class: "form-control", placeholder: "Nombre" },
                      label_html: { class: "sr-only" } %>
        </div>

        <div class="form-group">
          <%= f.input :last_name,
                      required: true,
                      input_html: { class: "form-control", placeholder: "Apellido" },
                      label_html: { class: "sr-only" } %>
        </div>

        <div class="form-group">
          <%= f.label :birth_date, "Fecha de nacimiento", class: "devise-label" %>
          <%= f.date_field :birth_date, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.input :gender,
                      required: true,
                      input_html: { class: "form-control", placeholder: "Género" },
                      label_html: { class: "sr-only" } %>
        </div>

        <div class="form-group">
          <%= f.input :occupation,
                      required: true,
                      input_html: { class: "form-control", placeholder: "Ocupación" },
                      label_html: { class: "sr-only" } %>
        </div>

        <div class="form-group">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control", placeholder: "Correo electrónico" },
                      label_html: { class: "sr-only" } %>
        </div>

        <div class="form-group">
          <%= f.input :password,
                      required: true,
                      hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Contraseña" },
                      label_html: { class: "sr-only" } %>
        </div>

        <div class="form-group">
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Confirmar contraseña" },
                      label_html: { class: "sr-only" } %>
        </div>

        <div class="form-group text-center">
          <%= f.button :submit, "Regístrate", class: "devise-btn" %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
