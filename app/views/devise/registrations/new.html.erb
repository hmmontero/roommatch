
<div class="container-fluid p-0" style="background: linear-gradient(45deg, #d9e2ec, #f0f4f8); min-height: 100vh; display: flex; align-items: center; justify-content: center;">
  <div class="col-md-6 col-lg-4">
    <div class="card" style="background: rgba(255, 255, 255, 0.8); border: 1px solid rgba(255,255,255,0.3); border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); backdrop-filter: blur(8px);">

      <div class="card-header text-center" style="background: linear-gradient(45deg, #00bcd4, #673ab7); padding: 1.5rem; border-top-left-radius: 12px; border-top-right-radius: 12px;">
        <h2 class="text-white mb-0" style="font-weight: 700;">Regístrate</h2>
        <small class="text-white-50" style="font-size: 0.9rem;">Crea tu cuenta y encuentra tu roomie ideal</small>
      </div>
      <div class="card-body" style="padding: 2rem;">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-group">
            <%= f.input :first_name,
                        required: true,
                        input_html: { class: "form-control", placeholder: "Nombre" },
                        label_html: { class: "sr-only" } %>
          </div>

          <div class="form-group">
            <%= f.input :last_name,
                        required: true,
                        input_html: { class: "form-control", placeholder: "Apellido" },
                        label_html: { class: "sr-only" } %>
          </div>

          <div class="form-group">
            <%= f.input :birth_date,
                        required: true,
                        as: :string,
                        input_html: { class: "form-control", placeholder: "Fecha de nacimiento (YYYY-MM-DD)" },
                        label_html: { class: "sr-only" } %>
          </div>

          <div class="form-group">
            <%= f.input :gender,
                        required: true,
                        input_html: { class: "form-control", placeholder: "Género" },
                        label_html: { class: "sr-only" } %>
          </div>

          <div class="form-group">
            <%= f.input :occupation,
                        required: true,
                        input_html: { class: "form-control", placeholder: "Ocupación" },
                        label_html: { class: "sr-only" } %>
          </div>

          <div class="form-group">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control", placeholder: "Correo electrónico", style:"background: #fff; border: 1px solid #ccc; color: #333;" },
                        label_html: { class: "sr-only" } %>
          </div>

          <div class="form-group">
            <%= f.input :password,
                        required: true,
                        hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Contraseña", style:"background: #fff; border: 1px solid #ccc; color: #333;" },
                        label_html: { class: "sr-only" } %>
          </div>

          <div class="form-group">
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Confirmar contraseña", style:"background: #fff; border: 1px solid #ccc; color: #333;" },
                        label_html: { class: "sr-only" } %>
          </div>
          <div class="form-group">
            <%= f.button :submit, "Regístrate", class: "btn btn-block", style: "background: linear-gradient(45deg, #00bcd4, #673ab7); border: none; color: #fff; font-weight: bold; padding: 0.5rem 0.75rem;" %>
          </div>
        <% end %>
        <div class="text-center mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
