<div class="devise-container">
  <div class="devise-card">
    <div class="devise-header text-center">
      <h2 class="devise-title">Cambiar Datos de Acceso</h2>
      <small class="devise-subtitle">Actualizar usuario y contraseña</small>
    </div>
    <div class="devise-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>


        <div class="form-group">
          <%= f.input :email,
                      required: true,
                      input_html: { class: "form-control", placeholder: "Correo electrónico" },
                      label_html: { class: "sr-only" } %>
        </div>


        <div class="form-group">
          <%= f.input :current_password,
                      required: true,
                      input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Contraseña actual" },
                      label_html: { class: "sr-only" } %>
        </div>


        <div class="form-group">
          <%= f.input :password,
                      input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Nueva contraseña (dejar en blanco si no cambia)" },
                      label_html: { class: "sr-only" } %>
        </div>


        <div class="form-group">
          <%= f.input :password_confirmation,
                      input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Confirmar nueva contraseña" },
                      label_html: { class: "sr-only" } %>
        </div>

        <div class="form-group text-center">
          <%= f.button :submit, "Actualizar", class: "devise-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
